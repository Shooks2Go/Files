from datetime import datetime
import datetime
import calendar

reserved_rooms_AVR1 = []
reserved_rooms_AVR2 = []
reserved_rooms_AVR3 = []

TodayDate = datetime.datetime.now()
current_Month = TodayDate.strftime("%m")
current_Year = TodayDate.strftime("%Y")
current_Day = TodayDate.strftime("%d")

formDate = current_Day + "/" + current_Month + "/" + current_Year
print("Current Date:", formDate)

current_Month = int(current_Month)
current_Day = int(current_Day)

def check_conflict_sched1(new_reservation):
    for room, existing_reservation in reserved_rooms_AVR1:
        if existing_reservation == new_reservation:
            print("This schedule is already booked. Please book for another date or time.")
            return True
    return False

def AVR1():
    while True:
        print(" ")
        print("[0] TO GO BACK")
        print("---------------------------")

        name = str(input("Enter Last_Name: "))

        if name == '0':
            return choosing_room()

        elif name.isdigit():
            print("INVALID INPUT")
            print(" ")
            continue

        while True:
            print(" ")
            print("------------------")
            print("[1] COT          |")
            print("[2] CEA          |")
            print("[B] GO BACK      |")
            print("------------------")

            program = input("Enter Program/Course: ")

            if program == 'B':
                return AVR1()
            try:
                program = int(program)
                if program == 1:
                    program = "COT"
                    break
                elif program == 2:
                    program = "CEA"
                    break
                else:
                    print("INVALID PROGRAM CHOICE")
            except ValueError:
                print("INVALID INPUT ( Please enter 1 or 2 ) or ( B to go back )")
                continue

        while True:
            try:
                print(" ")
                print("- - - - - - - - - - - - - - - - - - -")
                print("Sample Format ||  [2] for Feb")
                print("Enter [B] to go back")
                print("- - - - - - - - - - - - - - - - - - -")
                month = input("Enter a Month: ")

                if month == "B":
                    break

                elif not month.isdigit():
                    print("Invalid Input!")
                    continue

                month = int(month)
                if month == 0:
                    print("Invalid Input! Please refer to Sample Format")
                    continue
                elif month < current_Month:
                    print("Invalid Input! You can't reserve a past Month")
                    continue
                else:
                    day_count = calendar.monthrange(2024, month)
                    x = list(day_count)
                    x.pop(0)
                    int_result = int(''.join(map(str, x)))  # list to int
                    num_Month = calendar.month_name[month]  # int to month name
                    print(" ")
                    print("- - - - - - - - - - - - - - - - - - - - - - - - -")
                    print(f"All days in {num_Month} is 1 - {int_result}    |")
                    print("[B] TO GO BACK                                  |")
                    print("- - - - - - - - - - - - - - - - - - - - - - - - -")

                while month >= current_Month:
                    day = input("Enter a Day: ")

                    if day == 'B':
                        break

                    if not day.isdigit():
                        print("INVALID DAY")
                        print(" ")
                        continue
                    day = int(day)
                    if day == 0:
                        print("Invalid Input! Please refer to Sample Format")
                        continue
                    elif month == current_Month:
                        if day < current_Day:  # Tungod ni sa currrent day = Today.date nga gi call sa taas
                            print("Invalid Input! You can't reserve a past date")
                            continue
                        elif day > int_result:  # para ni dle mo lapas sa total na day sa each month
                            print("Invalid Input! Please refer to Sample Format")
                            continue
                        else:
                            int_result1 = str(day)  # day to string para sa print output

                    elif day > int_result:
                        print("Invalid Input")
                        continue
                    else:
                        int_result1 = str(day)

                    while True:
                        print(" ")
                        print("[B] TO GO BACK")
                        schedule_time = input("Enter (AM / PM): ")
                        print("- - - - - - - - - - - - - - - - - - -")
                        print(" ")
                        if schedule_time == 'B':
                            break
                        if schedule_time == "AM" or schedule_time == "PM":
                            new_reservation = f"Last_Name: {name} | Program/Course: {program} | Schedule: {num_Month} {int_result1} {current_Year} | Time: {schedule_time}"
                            if not check_conflict_sched1(new_reservation):

                                print("Reservation Confirmed!")
                                print(f"Last_Name: {name} | Program/Course: {program} | Schedule: {calendar.month_name[month]} {int_result1}, {current_Year} | Time: {schedule_time}")
                                new_reservation = f"Last_Name: {name} | Program/Course: {program} | Schedule: {num_Month} {int_result1} {current_Year} | Time: {schedule_time}"
                                reserved_rooms_AVR1.append(("AVR 1", new_reservation))
                                return True
                        else:
                            print("INVALID TIME")
            except ValueError:
                print("INVALID INPUT")
                continue



import pygame

BLACK = (0, 0, 0)

pygame.init()

screen_width = 1280
screen_height = 720

screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption("Fishing Game")

background = pygame.image.load('background.png')
resized_background = pygame.transform.scale(background, (screen_width, screen_height))

class Button:
    def __init__(self, image, x_pos, y_pos):
        self.default_image = image
        self.hover_image = self.change_image_color(image, BLACK)  # Hover color
        self.image = self.default_image
        self.rect = self.image.get_rect(center=(x_pos, y_pos))
        self.x_pos = x_pos
        self.y_pos = y_pos
        self.clicked = False

    def change_image_color(self, image, color):
        # Create a copy of the image and fill it with specified color
        new_image = image.copy()
        new_image.fill(color, None, pygame.BLEND_RGBA_MULT)
        return new_image

    def update(self):
        # Check if mouse is hovering the button
        if self.rect.collidepoint(pygame.mouse.get_pos()):
            self.image = self.hover_image
        else:
            self.image = self.default_image

    def check_clicked_button(self):

        action = False
        pos = pygame.mouse.get_pos()

        # Check clicked mouse
        if self.rect.collidepoint(pos):

            # Index [0] mao ang left click, [1] is middle click, [2] Right click
            if pygame.mouse.get_pressed()[0] == 1 and self.clicked == False:
                self.clicked = True
                action = True
            if pygame.mouse.get_pressed()[0] == 0:
                self.clicked = False

        screen.blit(self.image, (self.rect.x, self.rect.y))

        return action

# Load image
play_image = pygame.image.load("C:\\Users\\User\\PycharmProjects\\Scratch\\Prac\\Play.png").convert_alpha()
exit_image = pygame.image.load("C:\\Users\\User\\PycharmProjects\\Scratch\\Prac\\Exit.png").convert_alpha()

# Resize image
new_width = 200
new_height = 100

play_image = pygame.transform.scale(play_image, (new_width, new_height))
exit_image = pygame.transform.scale(exit_image, (new_width, new_height))

play_button_x = 460
play_button_y = 450

exit_button_x = 810
exit_button_y = 450

# button instances
play_button = Button(play_image, play_button_x, play_button_y)
exit_button = Button(exit_image, exit_button_x, exit_button_y)

# Main loop
running = True
while running:

    pos = pygame.mouse.get_pos()

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Update button state
    play_button.update()
    exit_button.update()

    # Draw everything
    screen.blit(resized_background, (0, 0))
    screen.blit(play_button.image, play_button.rect)
    screen.blit(exit_button.image, exit_button.rect)
    pygame.display.flip()

    if play_button.check_clicked_button():
        print("Start")        # Butang dari ang class function sa dula para mu balhin ang screen ex. game()

    if exit_button.check_clicked_button():
        running = False


    # Frame rate
    pygame.time.Clock().tick(60)

pygame.quit()
